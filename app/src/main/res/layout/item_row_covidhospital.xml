<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="#9CEBFF"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_item_hospitalName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#404258"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tv_item_hospitalAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#0096FF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_item_hospitalName"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_hospitalName"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tv_item_bed_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:text="Bed Availability : "
            android:textColor="#0096FF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_item_hospitalAddress"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_hospitalAddress" />

        <TextView
            android:id="@+id/tv_item_bed_availability_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5800FF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_bed_availability"
            app:layout_constraintStart_toEndOf="@+id/tv_item_bed_availability"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_item_bed_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0096FF"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Diupdate 14 jam yang lalu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>